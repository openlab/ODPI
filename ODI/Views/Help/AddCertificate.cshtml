    <h3>
        @ODI.Resources.Views.Help.AddCertificateResource.HowToAddACertificate</h3>
</div>
<div class="modal-body">
    <ol>
        <li>@Html.Raw(ODI.Resources.Views.Help.AddCertificateResource.GoToManagementSite)</li>
        <li>@Html.Raw(ODI.Resources.Views.Help.AddCertificateResource.ClickOnManagementCertificates)<br />
            <img src="/Content/img/help/add-certificate-1.png" />
